 <!-- form handling -->
 <form action="/api/employees" method="POST" id="add_employee">
    <div class="new_employee">
        <div class="form-group">
           <label for="name" class="text-light">Name</label>
           <input type="hidden" name="id" value="">
           <input type="text" name="name" value="" placeholder="Enter Name">
        </div>
        <div class="form-group">
           <label for="age" class="text-light">Date_of_birth</label>
           <input type="number" name="age" value="" >
        </div>
        <div class="form-group">
         <label for="gender" class="text-light">Gender</label>
         <div class="radio inline">
             <input type="radio" name="gender" value="Male">
             <label for="gender" class="text-light">Male</label> 
         </div>
         <div class="radio inline">
             <input type="radio" name="gender" value="Female">
             <label for="gender" class="text-light">Female</label> 
         </div>
         <div class="form-group">
             <label for="salary" class="text-light">Salary</label>
             <input type="number" name="salary" value ="" >
          </div>

         
      </div>
      <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
      </div>
    </div> 
 </form>